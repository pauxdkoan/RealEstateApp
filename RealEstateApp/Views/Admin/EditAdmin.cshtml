@using RealEstateApp.Core.Application.ViewModels.User.Admin

@model EditAdminVm
@{
    bool editMode = Model.Id==null ? false : true;
    ViewData["Title"] = "Guardar categoria";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white rounded-top">
                    <h4 class="mb-0">@(editMode ? $"Editando el Administrador: {Model.FirstName}" : "Registrando nuevo administrador")</h4>
                </div>
                <div class="card-body p-4">

                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <form method="post" asp-controller="Admin" asp-action="@(editMode ? "EditAdmin":"CreateAdmin")" novalidate>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">Nombre:</label>
                                <input asp-for="FirstName" class="form-control" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">Apellido:</label>
                                <input asp-for="LastName" class="form-control" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label">Nombre de usuario:</label>
                                <input asp-for="UserName" class="form-control" required />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="IdentityCard" class="form-label">Cédula:</label>
                                <input asp-for="IdentityCard" class="form-control" required />
                                <span asp-validation-for="IdentityCard" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Correo:</label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label">Contraseña:</label>
                                <input asp-for="Password" class="form-control" type="password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfrimPassword" class="form-label">Confirmar Contraseña:</label>
                                <input asp-for="ConfrimPassword" class="form-control" type="password" required />
                                <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4">Guardar</button>
                            <a asp-controller="Admin" asp-action="AdminMaintenance" class="btn btn-outline-secondary">Volver atrás</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #fff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-control {
        border-radius: 0.6rem;
        padding: 0.6rem 1rem;
        border: 1px solid #D3D5D7;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }

    .card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        font-weight: 600;
        font-size: 1.25rem;
    }
</style>

