@using RealEstateApp.Core.Application.ViewModels.Property
@model EditPropertyVm

@{
    ViewData["Title"] = "Editar Propiedad";
    var hasPropertyTypes = Model.PropertyTypes?.Any() ?? false;
    var hasSaleTypes = Model.SalesTypes?.Any() ?? false;
    var hasImprovements = Model.Improvements?.Any() ?? false;
}

<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #fff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-control, .form-select {
        border-radius: 0.6rem;
        padding: 0.6rem 1rem;
        border: 1px solid #D3D5D7;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
    }

        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }

    .card {
        border-radius: 1rem;
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
            transform: translateY(-3px);
        }

    .card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        font-weight: 600;
        font-size: 1.25rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Propiedad - @Model.Code</h4>
                </div>
                <div class="card-body p-4">
                    @if (!hasPropertyTypes || !hasSaleTypes || !hasImprovements)
                    {
                        <div class="alert alert-danger">
                            @if (!hasPropertyTypes)
                            {
                                <p>No hay tipos de propiedad registrados</p>
                            }
                            @if (!hasSaleTypes)
                            {
                                <p>No hay tipos de venta registrados</p>
                            }
                            @if (!hasImprovements)
                            {
                                <p>No hay mejoras registradas</p>
                            }
                            <p>Contacte al administrador para registrar estos elementos</p>
                        </div>
                    }
                    else
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <!-- Imágenes existentes -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Imágenes actuales</label>
                            <div class="row">
                                @if (Model.PropertyImageVms.Count > 0)
                                {
                                    @foreach (var image in Model.PropertyImageVms)
                                    {
                                        <div class="col-md-3 mb-3">
                                            <div class="card h-100 shadow-sm">
                                                <img src="@image.ImageUrl" class="card-img-top rounded-top" alt="Imagen propiedad">
                                                <div class="card-body text-center">
                                                    <form method="post" asp-controller="Agent" asp-action="DeleteImage" onsubmit="return confirmDelete(this);">
                                                        <input type="hidden" name="imageId" value="@image.Id" />
                                                        <input type="hidden" name="propertyId" value="@Model.Id" />
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">No tiene imágenes registradas</p>
                                }
                            </div>
                        </div>

                        <form method="post" asp-controller="Agent" asp-action="EditProperty" enctype="multipart/form-data">
                            <div class="row g-3">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="Code" />
                                <input type="hidden" asp-for="AgentId" />

                                <!-- Nuevas imágenes -->
                                <div class="col-12">
                                    <label class="form-label">Agregar nuevas imágenes (Máximo 4)</label>
                                    <input type="file" name="Files" class="form-control" multiple accept="image/*">
                                    <span asp-validation-for="Files" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="PropertyTypeId" class="form-label">Tipo de Propiedad *</label>
                                    <select asp-for="PropertyTypeId" class="form-select" required>
                                        <option value="">Seleccione un tipo de propiedad</option>
                                        @foreach (var type in Model.PropertyTypes)
                                        {
                                            <option value="@type.Id" selected="@(type.Id == Model.PropertyTypeId)">@type.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="PropertyTypeId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="SalesTypeId" class="form-label">Tipo de Venta</label>
                                    <select asp-for="SalesTypeId" asp-items="@(new SelectList(Model.SalesTypes, "Id", "Name"))" class="form-select">
                                        <option value="0">Seleccione un tipo de Venta</option>
                                    </select>
                                    <span asp-validation-for="SalesTypeId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Price" class="form-label">Precio (RD$)</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="PropertySize" class="form-label">Tamaño (m²)</label>
                                    <input asp-for="PropertySize" class="form-control" />
                                    <span asp-validation-for="PropertySize" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="AmountOfRoom" class="form-label">Habitaciones</label>
                                    <input asp-for="AmountOfRoom" class="form-control" />
                                    <span asp-validation-for="AmountOfRoom" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="AmountOfBathroom" class="form-label">Baños</label>
                                    <input asp-for="AmountOfBathroom" class="form-control" />
                                    <span asp-validation-for="AmountOfBathroom" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Description" class="form-label">Descripción</label>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <!-- Mejoras -->
                                <div class="col-12">
                                    <label class="form-label">Mejoras</label>
                                    <select asp-for="SelectedImprovements" class="form-select" multiple size="5">
                                        @foreach (var improvement in Model.Improvements)
                                        {
                                            <option value="@improvement.Id" selected="@(Model.SelectedImprovements?.Contains(improvement.Id) ?? false)">@improvement.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-12 d-flex justify-content-between mt-4">
                                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                    <a asp-controller="Agent" asp-action="PropertyMaintenance" class="btn btn-outline-secondary">Cancelar</a>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(form) {
            Swal.fire({
                title: '¿Eliminar imagen?',
                text: '¡No podrás revertir esto!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
            return false;
        }
    </script>
}