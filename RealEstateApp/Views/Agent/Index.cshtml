@model ICollection<RealEstateApp.Core.Application.ViewModels.Agent.AgentViewModel>

@{
    ViewData["Title"] = "Listado de agentes";
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4 text-center">Encuentra tu Agente Ideal</h2>

    <!-- Barra de búsqueda -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <form class="position-relative" method="get">
                <input type="text" name="Name" class="form-control shadow-lg search-input"
                       placeholder="Buscar agente por nombre" value="@ViewData["CurrentFilter"]">
                <button type="submit" class="btn btn-primary search-button">
                    <i class="fa fa-search text-white"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Listado de agentes -->
    <div class="row justify-content-center">
        @if (Model.Any())
        {
            @foreach (var agent in Model)
            {
                <a asp-action="AgentProperties" asp-controller="Agent" asp-route-agentId="@agent.Id"
                   class="text-decoration-none col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="agent-card">
                        <div class="agent-image">
                            <img src="@agent.PhotoUrl" alt="Foto de @agent.FullName">
                        </div>
                        <div class="agent-name">@agent.FullName</div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    No se encontraron agentes que coincidan con los filtros aplicados.
                </div>
            </div>
        }
    </div>
</div>

<style>
    :root {
        --rich-black: #050517;
        --flame: #CF5C36;
        --sunset: #EFC88B;
        --vanilla: #F4E3B2;
        --platinum: #D3D5D7;
        --text-color: #2C2C2C;
        --shadow: rgba(0, 0, 0, 0.15);
        --radius: 1rem;
    }

    body {
        background-color: var(--vanilla);
        color: var(--text-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .search-input {
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border: 1px solid var(--platinum);
        box-shadow: 0 2px 8px var(--shadow);
        transition: all 0.3s ease;
        width: 100%;
    }

    .search-button {
        position: absolute;
        right: -20px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        border-radius: 50%;
        width: 48px;
        height: 48px;
        background-color: var(--flame);
        color: white;
        cursor: pointer;
        box-shadow: 0 4px 12px var(--shadow);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .agent-card {
        width: 100%;
        border-radius: var(--radius);
        overflow: hidden;
        background-color: white;
        box-shadow: 0 6px 20px var(--shadow);
        transition: all 0.3s ease;
        text-align: center;
        padding: 1rem;
    }

        .agent-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
            border: 2px solid var(--flame);
        }

    .agent-image img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: var(--radius);
    }

    .agent-name {
        margin-top: 1rem;
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--rich-black);
    }
</style>
