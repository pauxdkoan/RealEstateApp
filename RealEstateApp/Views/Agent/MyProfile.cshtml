@model RealStateApp.Core.Application.ViewModels.Agent.EditAgentViewModel

@{
    ViewData["Title"] = "Mi Perfil | PropHub";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-person-circle me-2 text-primary"></i>
                        Mi Perfil
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditAgent" asp-controller="Agent" enctype="multipart/form-data" method="post">
                        <div class="row">
                            <div class="col-md-4 mb-4 text-center">
                                @if (!string.IsNullOrEmpty(Model.FotoUrl))
                                {
                                    <div class="mb-3">
                                        <img src="@Model.FotoUrl" alt="Foto actual" class="img-thumbnail rounded-circle" style="width: 180px; height: 180px; object-fit: cover;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-3">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 180px; height: 180px;">
                                            <i class="bi bi-person display-1 text-muted"></i>
                                        </div>
                                    </div>
                                }
                                <div class="mb-3">
                                    <label asp-for="Foto" class="form-label fw-medium">Cambiar foto</label>
                                    <input asp-for="Foto" class="form-control" type="file" accept="image/*" />
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Nombre" class="form-label fw-medium">Nombre *</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                                            <input asp-for="Nombre" class="form-control" required />
                                        </div>
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Apellido" class="form-label fw-medium">Apellido *</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                                            <input asp-for="Apellido" class="form-control" required />
                                        </div>
                                        <span asp-validation-for="Apellido" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Telefono" class="form-label fw-medium">Teléfono *</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                        <input asp-for="Telefono" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-medium">Nombre de usuario</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-at"></i></span>
                                        <input value="@Model.UserName" class="form-control" disabled />
                                    </div>
                                    <input type="hidden" asp-for="UserName" />
                                    <input type="hidden" asp-for="FotoUrl" />
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-controller="Agent" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}