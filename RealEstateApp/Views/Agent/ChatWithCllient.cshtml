@model List<RealEstateApp.Core.Application.ViewModels.Chat.ChatVm>

@{
    ViewData["Title"] = "Chats con Clientes";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-comments me-2"></i>Chats con Clientes</h4>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <ul class="list-group">
                    @foreach (var chat in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <i class="fas fa-user me-2"></i>
                                @chat.Client.UserName (@chat.Client.FirstName @chat.Client.LastName)
                            </span>
                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="AgentChat"
                               asp-action="ChatWithClient"
                               asp-route-chatId="@chat.Id">
                                Ver Chat
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No hay conversaciones activas con clientes.</p>
            }
        </div>
    </div>
</div>
