@using RealEstateApp.Core.Application.ViewModels.Property
@using RealEstateApp.Core.Application.Helpers
@using RealEstateApp.Core.Application.Dtos.Account

@model SavePropertyVm;

@inject IHttpContextAccessor httpContextAccesor
@{
    ViewData["Title"] = "Registro de propiedad";
    var user = httpContextAccesor.HttpContext.Session.Get<AuthenticationResponse>("user");
    var hasPropertyTypes = Model.PropertyTypes?.Any() ?? false;
    var hasSaleTypes = Model.SalesTypes?.Any() ?? false;
    var hasImprovements = Model.Improvements?.Any() ?? false;
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>Registro de nuevo usuario</h4>
                </div>
                <div class="card-body">

                    @if (!hasPropertyTypes || !hasSaleTypes || !hasImprovements)
                    {
                        <div class="alert alert-danger">
                            @if (!hasPropertyTypes)
                            {
                                <p>No hay tipos de propiedad registrados</p>
                            }
                            @if (!hasSaleTypes)
                            {
                                <p>No hay tipos de venta registrados</p>
                            }
                            @if (!hasImprovements)
                            {
                                <p>No hay mejoras registradas</p>
                            }
                            <p>Contacte al administrador para registrar estos elementos</p>
                        </div>
                    }
                    else
                    {

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })


                        <form method="post" enctype="multipart/form-data" asp-controller="Agent" asp-action="CreateProperty">




                            <div class="mb-3">
                                <label asp-for="PropertyTypeId" class="form-label">Tipo de Propiedad: </label>
                                <select asp-for="PropertyTypeId" asp-items="@(new SelectList(Model.PropertyTypes ,"Id", "Name" )) " class="form-select">
                                    <option value="0">Seleccione una opcion</option>

                                </select>
                                <span asp-validation-for="PropertyTypes" class="text-danger"></span>
                            </div>



                            <div class="mb-3">
                                <label asp-for="SalesTypeId" class="form-label">Tipo de Venta: </label>
                                <select asp-for="SalesTypeId" asp-items="@(new SelectList(Model.SalesTypes ,"Id", "Name" )) " class="form-select">
                                    <option value="0">Seleccione un tipo de Venta</option>

                                </select>
                                <span asp-validation-for="SalesTypeId" class="text-danger"></span>
                            </div>


                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">Precio (DOP): </label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>


                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Descripción: </label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PropertySize" class="form-label">Tamaño (m²) : </label>
                                <input asp-for="PropertySize" class="form-control" />
                                <span asp-validation-for="PropertySize" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="AmountOfRoom" class="form-label">Cantidad de habitaciones: </label>
                                <input asp-for="AmountOfRoom" class="form-control" />
                                <span asp-validation-for="AmountOfRoom" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="AmountOfBathroom" class="form-label">Cantidad de baños: </label>
                                <input asp-for="AmountOfBathroom" class="form-control" />
                                <span asp-validation-for="AmountOfBathroom" class="text-danger"></span>
                            </div>

                            <!-- Mejoras -->
                            <div class="mb-3">
                                <label class="form-label">Mejoras</label>
                                <select asp-for="SelectedImprovements" class="form-select" multiple size="5">
                                    @foreach (var improvement in Model.Improvements)
                                    {
                                        <option value="@improvement.Id">@improvement.Name</option>
                                    }
                                </select>
                                <small class="form-text text-muted">Mantén presionado Ctrl para seleccionar múltiples</small>
                            </div>

                            <!-- Imágenes -->
                            <div class="mb-3">
                                <label class="form-label">Imágenes (1-4 archivos) *</label>
                                <input type="file" name="Files" class="form-control" multiple
                                       accept="image/*" data-max-files="4" required>
                                <small class="form-text text-muted">Seleccione entre 1 y 4 imágenes</small>
                            </div>


                            <input type="hidden" asp-for="AgentId" value="@user.Id" />

                            <input type="hidden" asp-for="Id" />

                            <button type="submit" class="btn btn-primary">Registrar Propiedad</button>
                            <a asp-controller="Agent" asp-action="PropertyMaintenance" class="btn btn-warning">Volver atras</a>

                        </form>
                    
                    }





                </div>

            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script>
        // Validación de imágenes
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const files = e.target.files;
            const maxFiles = 4;

            if (files.length > maxFiles) {
                alert(`Solo puedes subir máximo ${maxFiles} imágenes`);
                e.target.value = '';
            }
        });
    </script>
}