@model List<RealEstateApp.Core.Application.ViewModels.Agent.AgentViewModel>

@{
    ViewData["Title"] = "Agentes Inmobiliarios | PropHub";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="fw-bold mb-1">
                <i class="bi bi-people-fill me-2 text-primary"></i>
                Nuestros Agentes Inmobiliarios
            </h2>
            <p class="text-muted">Profesionales calificados listos para ayudarte a encontrar tu propiedad ideal</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var agent in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 property-card">
                        <div class="position-relative">
                            <img src="@agent.PhotoUrl" class="card-img-top" alt="Foto de @agent.FullName" style="height: 250px; object-fit: cover; border-top-left-radius: 0.75rem; border-top-right-radius: 0.75rem;" />
                            <div class="position-absolute bottom-0 start-0 end-0 p-3 text-center" style="background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);">
                                <h5 class="text-white mb-0 fw-bold">@agent.FullName</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-center mb-3">
                                <span class="badge bg-primary px-3 py-2">Agente Inmobiliario</span>
                            </div>
                            <div class="text-center mb-3">
                                <p class="mb-1"><i class="bi bi-envelope-fill me-2"></i>@agent.Email</p>
                                <p class="mb-0"><i class="bi bi-telephone-fill me-2"></i>@agent.PhoneNumber</p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">
                                    <i class="bi bi-building me-1"></i>
                                    @(agent.properties?.Count ?? 0) propiedades
                                </span>
                                <a href="mailto:@agent.Email" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-envelope me-1"></i>Contactar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="col-12 text-center py-5">
            <i class="bi bi-person-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">No hay agentes disponibles</h4>
            <p class="text-muted">Intenta más tarde</p>
        </div>
    }
</div>

<style>
    .property-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 0.75rem;
        overflow: hidden;
    }

        .property-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
</style>