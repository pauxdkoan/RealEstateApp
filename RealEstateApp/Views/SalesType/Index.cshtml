@model List<RealEstateApp.Core.Application.ViewModels.SalesType.SalesTypeVm>

@{
    ViewData["Title"] = "Mantenimiento de Tipos de Ventas";
}

<div class="container mt-4">
    <h2 class="mb-4">Tipos de Ventas</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Tipo de Venta</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Cantidad de Propiedades</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@(item.Properties?.Count ?? 0)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No hay tipos de ventas registrados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

