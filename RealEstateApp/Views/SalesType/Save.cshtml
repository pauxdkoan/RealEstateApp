@model RealEstateApp.Core.Application.ViewModels.SalesType.SaveSalesTypeVm

@{
    ViewData["Title"] = Model.Id.HasValue ? "Editar Tipo de Venta | PropHub" : "Nuevo Tipo de Venta | PropHub";
    var actionName = Model.Id.HasValue ? "Edit" : "Create";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Tipos de Ventas</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(Model.Id.HasValue ? "Editar" : "Crear")</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-tag me-2 text-primary"></i>
                        @(Model.Id.HasValue ? "Editar Tipo de Venta" : "Crear Nuevo Tipo de Venta")
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="@actionName" method="post" class="mt-3">
                        @if (Model.Id.HasValue)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium">Nombre *</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                <input asp-for="Name" class="form-control" required />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-medium">Descripción *</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-text-paragraph"></i></span>
                                <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>@(Model.Id.HasValue ? "Guardar Cambios" : "Crear")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}