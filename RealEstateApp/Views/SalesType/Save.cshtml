@model RealEstateApp.Core.Application.ViewModels.SalesType.SaveSalesTypeVm

@{
    ViewData["Title"] = Model.Id.HasValue ? "Editar Tipo de Venta" : "Crear Tipo de Venta";
    var actionName = Model.Id.HasValue ? "Edit" : "Create";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="@actionName" method="post" class="mt-3">

        <div class="form-group mb-3">
            <label for="Name">Nombre</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label for="Description">Descripción</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
            <button type="submit" class="btn btn-primary">
                @(Model.Id.HasValue ? "Guardar Cambios" : "Crear")
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

