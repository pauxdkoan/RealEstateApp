@model List<RealEstateApp.Core.Application.ViewModels.Property.PropertyType.PropertyTypeVm>

@{
    ViewData["Title"] = "Mantenimiento de Tipos de Propiedades";
}

<div class="container mt-4">
    <h2 class="mb-4">Mantenimiento de Tipos de Propiedades</h2>

    <div class="mb-3">
        <a asp-controller="PropertyType" asp-action="Create" class="btn btn-success">+ Crear Tipo de Propiedad</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Cantidad de Propiedades</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@(item.Properties?.Count ?? 0)</td>
                    <td>
                        <a asp-controller="PropertyType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Editar</a>
                        <a asp-controller="PropertyType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

