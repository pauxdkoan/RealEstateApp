@model RealEstateApp.Core.Application.ViewModels.Property.PropertyType.SavePropertyTypeVm

@{
    ViewData["Title"] = Model.Id.HasValue ? "Editar Tipo de Propiedad" : "Crear Tipo de Propiedad";
    string action = Model.Id.HasValue ? "Edit" : "Create";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-controller="PropertyType" asp-action="@action" method="post" class="mt-3">
        @if (Model.Id.HasValue)
        {
            <input type="hidden" asp-for="Id" />
        }

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-controller="PropertyType" asp-action="Index" class="btn btn-secondary">Volver</a>
            <button type="submit" class="btn btn-primary">
                @(Model.Id.HasValue ? "Guardar Cambios" : "Crear")
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

