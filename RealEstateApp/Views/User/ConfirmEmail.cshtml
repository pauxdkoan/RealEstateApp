@model string
@{
    ViewData["Title"] = "Confirmar Correo | PropHub";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-envelope-check me-2"></i>
                        Confirmación de Correo
                    </h3>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="bg-light rounded-circle mx-auto d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                        </div>
                    </div>

                    <h4 class="mb-4">@Model</h4>

                    <p class="text-muted mb-4">Tu correo electrónico ha sido verificado correctamente. Ahora puedes acceder a todas las funcionalidades de PropHub.</p>

                    <a asp-controller="User" asp-action="Index" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Iniciar sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>