@using RealEstateApp.Core.Application.ViewModels.User

@model LoginVm;
@{
    ViewData["Title"] = "Iniciar Sesión | PropHub";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Iniciar Sesión
                    </h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <p class="mb-0">@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" asp-controller="User" asp-action="Index">
                        <div class="mb-4">
                            <label asp-for="EmailOrUserName" class="form-label fw-medium">Correo o nombre de usuario</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input class="form-control" asp-for="EmailOrUserName" placeholder="Ingresa tu correo o nombre de usuario">
                            </div>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-medium">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input class="form-control" asp-for="Password" placeholder="Ingresa tu contraseña">
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-controller="User" asp-action="Register" class="btn btn-outline-primary px-4">
                                <i class="bi bi-person-plus me-2"></i>
                                Crear cuenta
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Iniciar sesión
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light py-3 text-center">
                    <p class="mb-0">¿No tienes una cuenta? <a asp-controller="User" asp-action="Register" class="fw-bold text-primary">Regístrate ahora</a></p>
                </div>
            </div>
        </div>
    </div>
</div>