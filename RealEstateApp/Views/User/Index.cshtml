@using RealEstateApp.Core.Application.ViewModels.User

@model LoginVm;
@{
    ViewData["Title"] = "Login";
}

<div class="row mt-5">
    <div class="col-6 offset-3">
        <div class="card shadow-sm">
            <div class="card-body">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @if (Model.HasError)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <p>@Model.Error</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form method="post" asp-controller="User" asp-action="Index">
                    <div class="mb-3">
                        <label asp-for="EmailOrUserName" class="form-label">Correo o nombre de usuario</label>
                        <input class="form-control" asp-for="EmailOrUserName">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <input class="form-control" asp-for="Password">
                    </div>

                    <button type="submit" class="btn btn-primary float-end">Iniciar sección</button>
                   
                </form>

            </div>

        </div>

    </div>
</div>

