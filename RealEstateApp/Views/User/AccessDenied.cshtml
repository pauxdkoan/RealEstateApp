@model string
@{
    ViewData["Title"] = "Acceso Denegado | PropHub";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-shield-lock-fill fs-3 me-3"></i>
                        <h4 class="mb-0 fw-bold">Acceso Denegado</h4>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-x-circle text-danger display-1 mb-3"></i>
                        <h3 class="fw-bold">No tiene permisos para acceder a esta sección</h3>
                        <p class="text-muted mb-0">
                            Lo sentimos, pero no cuenta con los privilegios necesarios para visualizar el contenido solicitado.
                        </p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model))
                    {
                        <div class="alert alert-warning mb-4">
                            <div class="d-flex">
                                <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                                <div>
                                    <strong>Información adicional:</strong>
                                    <p class="mb-0">@Model</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="d-flex flex-column flex-md-row justify-content-center gap-3 mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door me-2"></i>Ir al Inicio
                        </a>
                        <button class="btn btn-outline-secondary btn-lg" onclick="history.back()">
                            <i class="bi bi-arrow-left me-2"></i>Volver Atrás
                        </button>
                    </div>
                </div>
                <div class="card-footer bg-white py-3">
                    <div class="text-center">
                        <p class="mb-0 text-muted">
                            Si considera que esto es un error, por favor contacte al administrador del sistema.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .btn {
        border-radius: 0.5rem;
    }
</style>