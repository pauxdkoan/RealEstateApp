@using RealEstateApp.Core.Application.ViewModels.User
@model SaveUserVm;

@{
    ViewData["Title"] = "Registro | PropHub";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-person-plus me-2"></i>
                        Únete a PropHub
                    </h3>
                    <p class="mb-0 mt-2">Crea tu cuenta y comienza a explorar propiedades</p>
                </div>
                <div class="card-body p-4">
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <p class="mb-0">@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="Register">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-medium">Nombre</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="FirstName" class="form-control" placeholder="Ingresa tu nombre" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-medium">Apellido</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="LastName" class="form-control" placeholder="Ingresa tu apellido" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-medium">Teléfono</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Phone" class="form-control" placeholder="Ej: +1234567890" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="File" class="form-label fw-medium">Foto de perfil</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-image"></i></span>
                                    <input required asp-for="File" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UserName" class="form-label fw-medium">Nombre de usuario</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-at"></i></span>
                                    <input asp-for="UserName" class="form-control" placeholder="Elige un nombre de usuario único" />
                                </div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-medium">Correo electrónico</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label fw-medium">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" class="form-control" placeholder="Crea una contraseña segura" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-medium">Confirmar contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Repite tu contraseña" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Rol" class="form-label fw-medium">Tipo de Usuario</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                <select asp-for="Rol" asp-items="@(new SelectList(Model.RolList.Select((role, index) => new{ Value=index+1, Text=role}), "Value","Text" ))" class="form-select">
                                    <option value="0">Seleccione una opción</option>
                                </select>
                            </div>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-2"></i>
                                Volver al login
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-person-check me-2"></i>
                                Crear cuenta
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light py-3 text-center">
                    <p class="mb-0">¿Ya tienes una cuenta? <a asp-controller="User" asp-action="Index" class="fw-bold text-primary">Inicia sesión</a></p>
                </div>
            </div>
        </div>
    </div>
</div>