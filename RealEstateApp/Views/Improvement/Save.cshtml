@model RealEstateApp.Core.Application.ViewModels.Improvement.SaveImprovementVm

@{
    ViewData["Title"] = Model.Id == null ? "Nueva Mejora | PropHub" : "Editar Mejora | PropHub";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Mejoras</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(Model.Id == null ? "Crear" : "Editar")</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-stars me-2 text-primary"></i>
                        @(Model.Id == null ? "Crear Nueva Mejora" : "Editar Mejora")
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="@((Model.Id == null) ? "Create" : "Edit")" method="post">
                        @if (Model.Id != null)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium">Nombre de la Mejora *</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-star"></i></span>
                                <input asp-for="Name" class="form-control" required />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-medium">Descripción *</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-text-paragraph"></i></span>
                                <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>@((Model.Id == null) ? "Crear Mejora" : "Guardar Cambios")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}