@model RealEstateApp.Core.Application.ViewModels.Improvement.SaveImprovementVm

@{
    ViewData["Title"] = Model.Id == null ? "Crear Nueva Mejora" : "Editar Mejora";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="@((Model.Id == null) ? "Create" : "Edit")" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Nombre de la Mejora</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Descripción</label>
            <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <a asp-action="Index" class="btn btn-secondary me-2">Volver</a>
            <button type="submit" class="btn btn-primary">
                @((Model.Id == null) ? "Crear Mejora" : "Guardar Mejora")
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

